<Page x:Class="SquidLeagueAdmin.UI.Views.Matches.MatchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SquidLeagueAdmin.UI.Views.Matches"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MatchPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        
        <StackPanel VerticalAlignment="Center" Grid.ColumnSpan="2">
            <TextBlock Text="Matches" FontSize="24" HorizontalAlignment="Center"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Row="1">
            <TextBlock Text="Select Bracket:" FontSize="20" HorizontalAlignment="Right"/>
            <TextBlock Text="Select Bracket Stage:" FontSize="20" HorizontalAlignment="Right"/>
            <TextBlock Text="Select Match:" FontSize="20" HorizontalAlignment="Right"/>
            <TextBlock Text="Home Team:" FontSize="20" HorizontalAlignment="Right"/>
            <TextBlock Text="Away Team:" FontSize="20" HorizontalAlignment="Right"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1">
            <ComboBox x:Name="cmbBracket" ItemsSource="{Binding Path=Brackets, Mode=TwoWay}" SelectedItem="{Binding Path=SelectedBracket}" Width="100" Height="20" HorizontalAlignment="Left" Margin="5,5,0,0"/>
            <ComboBox x:Name="cmbBracketStage" ItemsSource="{Binding Path=Stages, Mode=TwoWay}" SelectedItem="{Binding Path=SelectedStage}" Width="100" Height="20" HorizontalAlignment="Left" Margin="5,5,0,2"/>
            <ComboBox x:Name="cmbMatch" ItemsSource="{Binding Path=Matches, Mode=TwoWay}" SelectedItem="{Binding Path=SelectedMatch}" Width="300" Height="20" HorizontalAlignment="Left" Margin="5,5,0,2"/>
            <ComboBox x:Name="cmbHomeTeam" ItemsSource="{Binding Path=Teams}" SelectedItem="{Binding Path=SelectedHomeTeam}" Width="200" Height="20" HorizontalAlignment="Left" Margin="5,5,0,2"/>
            <ComboBox x:Name="cmbAwayTeam" ItemsSource="{Binding Path=Teams}" SelectedItem="{Binding Path=SelectedAwayTeam}" Width="200" Height="20" HorizontalAlignment="Left" Margin="5,5,0,2"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Label x:Name="lblSaved" Content="{Binding Path=LabelText}" Foreground="{Binding Path=LabelColour}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Center">
            <Button x:Name="btnSave" Command="{Binding Path=SaveCommand}" Content="Save" Width="100" Height="20"/>
            <Button x:Name="btnReload" Command="{Binding Path=ReloadCommand}" Content="Reload" Width="100" Height="20" Margin="10,0,0,0"/>
            <Button x:Name="btnDelete" Command="{Binding Path=DeleteCommand}" Content="Delete" Width="100" Height="20" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Page>
