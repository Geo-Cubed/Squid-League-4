@page "/admin/results"
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization;

<div class="text-center">
    <h3 class="m-2">Match Results</h3>
    <select class="form-control mb-3" @onchange="OnMatchSelectAsync">
        <option value="f" selected></option>
        @foreach (var match in this.matches)
        {
            <option value="@match.Id">@this.GetMatchText(match.HomeTeam, match.AwayTeam)</option>
        }
    </select>

    <div class="d-flex flex-wrap justify-content-center">
        @if (this.maps.Count() == 0)
        {
            <h3>This match has not been associated with a bracket yet.</h3>
        }

        @foreach (var map in this.maps)
        {
            <div class="card m-2" style="width:100%;">
                <div class="card-header">
                    <h4>@string.Format("Game {0} on {1} {2}", map.SortOrder, map.Mode.ModeName, map.Map.MapName)</h4>
                </div>
                <div class="card-body">
                    <div class="d-flex flex-column">
                        <div class="d-flex flex-row justify-content-lg-between">
                            <div class="d-flex flex-row">
                                <h5 class="mr-3">Home Team</h5>
                                <h5>45</h5>
                            </div>
                            <div class="d-flex flex-row">
                                <h5 class="mr-3">76</h5>
                                <h5>Away Team</h5>
                            </div>
                        </div>
                        <div class="d-flex flex-row justify-content-lg-between">
                            <div class="d-flex flex-column">
                                <select class="form-control">
                                    @foreach (var player in this.homeTeamPlayers)
                                    {
                                        <option value="@player.Id">@player.InGameName</option>
                                    }
                                </select>
                                <select class="form-control">
                                    @foreach (var player in this.homeTeamPlayers)
                                    {
                                        <option value="@player.Id">@player.InGameName</option>
                                    }
                                </select>
                                <select class="form-control">
                                    @foreach (var player in this.homeTeamPlayers)
                                    {
                                        <option value="@player.Id">@player.InGameName</option>
                                    }
                                </select>
                                <select class="form-control">
                                    @foreach (var player in this.homeTeamPlayers)
                                    {
                                        <option value="@player.Id">@player.InGameName</option>
                                    }
                                </select>
                            </div>
                            <div class="d-flex flex-column align-items-center">
                                <img src="@map.Map.PicturePath" style="height:200px;width:355px;" />
                                <img src="@map.Mode.PicturePath" style="height:64px;width:64px;" />
                            </div>
                            <div class="d-flex flex-column">
                                <select class="form-control">
                                    @foreach (var player in this.awayTeamPlayers)
                                    {
                                        <option value="@player.Id">@player.InGameName</option>
                                    }
                                </select>
                                <select class="form-control">
                                    @foreach (var player in this.awayTeamPlayers)
                                    {
                                        <option value="@player.Id">@player.InGameName</option>
                                    }
                                </select>
                                <select class="form-control">
                                    @foreach (var player in this.awayTeamPlayers)
                                    {
                                        <option value="@player.Id">@player.InGameName</option>
                                    }
                                </select>
                                <select class="form-control">
                                    @foreach (var player in this.awayTeamPlayers)
                                    {
                                        <option value="@player.Id">@player.InGameName</option>
                                    }
                                </select>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
</div>
