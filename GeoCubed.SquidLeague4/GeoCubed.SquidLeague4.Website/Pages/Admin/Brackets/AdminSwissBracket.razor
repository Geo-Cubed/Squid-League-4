@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization;

<div class="text-center">
    <h3>Swiss Bracket</h3>

    <div class="d-flex justify-content-end m-2">
        <button type="button" class="btn btn-primary" @onclick="OpenAddSwiss">
            <span class="oi oi-plus"></span> Add Swiss Match
        </button>
        <button class="btn btn-primary ml-2 mr-2 @((this.selectedSwissId > 0) ? string.Empty : "disabled")" @onclick="(() => { if (this.selectedSwissId > 0) OpenEditSwiss(); })">
            <span class="oi oi-pencil"></span> Edit Swiss Match
        </button>
        <button class="btn btn-primary @((this.selectedSwissId > 0) ? string.Empty : "disabled")" @onclick="(() => { if (this.selectedSwissId > 0) OpenDeleteSwiss(); })">
            <span class="oi oi-trash"></span> Delete Swiss Match
        </button>
    </div>

    <div class="d-flex justify-content-center">
        <table class="table table-bordered table-hover">
            <caption>List of swiss matches</caption>
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Match</th>
                    <th scope="col">Week</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var swiss in this.allBracketSwiss.OrderBy(bs => bs.MatchWeek))
                {
                    <tr class="@((this.selectedSwissId == swiss.Id) ? "table-secondary" : string.Empty)" @onclick="(() => { if (this.selectedSwissId == swiss.Id) { OpenEditSwiss(); } else { this.selectedSwissId = swiss.Id; } })">
                        <td scope="row">@swiss.Id</td>
                        <td>@this.GetMatchVsText(swiss.Id)</td>
                        <td>@swiss.MatchWeek</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<Modal @ref="addModal">
    <Title>Add</Title>
    <Body>
        <form>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Match</label>
                
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Match Week</label>

            </div>
        </form>
        <h6 class="text-danger">@this.message</h6>
    </Body>
    <Footer>
        <button type="button" class="btn btn-primary" @onclick="AddSwiss">Add</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="(() => this.addModal.Close())">Cancel</button>
    </Footer>
</Modal>

<Modal @ref="editModal">
    <Title>Edit</Title>
    <Body>
        <form>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Id</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" @bind-value="this.model.Id" readonly />
                </div>
            </div>
        </form>
        <h6 class="text-danger">@this.message</h6>
    </Body>
    <Footer>
        <button type="button" class="btn btn-primary" @onclick="EditSwiss">Save Changes</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="(() => this.editModal.Close())">Cancel</button>
    </Footer>
</Modal>

<Modal @ref="deleteModal">
    <Title>Delete</Title>
    <Body>
        <span><em>@this.GetDeleteText()</em></span>
        <h6 class="text-danger">@this.message</h6>
    </Body>
    <Footer>
        <button type="button" class="btn btn-danger" @onclick="DeleteSwiss">Ok</button>
        <button type="button" class="btn btn-primary" data-dismiss="modal" @onclick="(() => this.deleteModal.Close())">Cancel</button>
    </Footer>
</Modal>